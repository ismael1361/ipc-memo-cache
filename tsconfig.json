{
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "compilerOptions": {
        "lib": [
            "esnext",
            "ES2015"
        ],
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "listEmittedFiles": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "pretty": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "removeComments": false,
        "allowJs": true,
        "checkJs": false,
        "noFallthroughCasesInSwitch": true,
        "outDir": "./dist/esm",
        "baseUrl": "./src",
    },
    "compileOnSave": false,
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}